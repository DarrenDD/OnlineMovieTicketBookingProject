@model OnlineMovieTicketBookingProject.Views.ViewModels.MovieDetailViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MovieDetailViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descritpion" class="control-label"></label>
                <input asp-for="Descritpion" class="form-control" />
                <span asp-validation-for="Descritpion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfMovie" class="control-label"></label>
                <input asp-for="DateOfMovie" class="form-control" />
                <span asp-validation-for="DateOfMovie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoviePicture" class="control-label"></label>
                <input type="file" name="files" multiple asp-for="MoviePicture" class="form-control" />
                <span asp-validation-for="MoviePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @TempData["Success"]
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
